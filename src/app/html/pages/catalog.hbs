{{!Catalog}}

{{> layout/head page-title="Denim"}}

{{> blocks/header }}

<main class="catalog">
  <section class="catalog__intro intro">
    <div class="container">
      <div class="intro__container">
        <div class="intro__description">
          <p class="intro__way">
            <a href="#">All categories</a>
            <span>/</span>
            <a href="#">Woman</a>
            <span>/</span>
            <a class="intro__link_active" href="#">Jackets</a>
          </p>
          <h1 class="intro__title title"><span>Denim Collection</span><span>Fall 2019</span></h1>
        </div>
        <div class="intro__pictures">
          <div class="intro__pictures_bck">
            <img class="intro__img" src="../assets/images/catalog/major.jpg" width="299" height="260" alt="headband">
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="catalog__products products">
    <div class="container">
      <div class="products__filter filter">
        {{> blocks/filter }}
      </div>
      <div class="products__cards">
        {{#each products.woman.jacket}}
          {{>blocks/product-card}}
        {{/each}}
      </div>
      <div class="products__load">
        <p class="products__show">Showing 9 of 45 items<span></span></p>
      </div>
      <button class="products__btn btn-black" type="button">Load more</button>
    </div>
  </section>
</main>
{{> blocks/footer }}
{{> layout/bottom }}
